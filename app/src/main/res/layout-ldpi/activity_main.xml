<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1327A6"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ff"
        android:layout_width="300dp"
        android:layout_height="112dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/fpb"
            android:layout_width="99dp"
            android:layout_height="90dp"
            android:background="@drawable/bbox"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="First Player"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="38dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/cancel" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/spb"
            android:layout_width="98dp"
            android:layout_height="93dp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:background="@drawable/bbox"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Second Player"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="39dp"
                android:layout_marginTop="@dimen/_11sdp"
                android:background="@drawable/dfd" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="307dp"
        android:layout_height="256dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/xz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ff" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_72sdp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView13"
        app:layout_constraintEnd_toEndOf="@+id/imageView13"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:srcCompat="@drawable/box" />

    <ImageView
        android:id="@+id/img7"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_72sdp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView13"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toBottomOf="@+id/imageView13"
        app:srcCompat="@drawable/box" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_72sdp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView14"
        app:layout_constraintEnd_toStartOf="@+id/imageView14"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/imageView14"
        app:srcCompat="@drawable/box" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_72sdp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:srcCompat="@drawable/box" />

    <ImageView
        android:id="@+id/img9"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_72sdp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView19"
        app:layout_constraintStart_toStartOf="@+id/imageView19"
        app:layout_constraintTop_toBottomOf="@+id/imageView19"
        app:srcCompat="@drawable/box" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_72sdp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView19"
        app:layout_constraintEnd_toEndOf="@+id/imageView19"
        app:layout_constraintStart_toStartOf="@+id/imageView19"
        app:srcCompat="@drawable/box" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_72sdp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView14"
        app:layout_constraintEnd_toEndOf="@+id/imageView14"
        app:layout_constraintStart_toStartOf="@+id/imageView14"
        app:srcCompat="@drawable/box" />

    <ImageView
        android:id="@+id/img8"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_72sdp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView14"
        app:layout_constraintStart_toStartOf="@+id/imageView14"
        app:layout_constraintTop_toBottomOf="@+id/imageView14"
        app:srcCompat="@drawable/box" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_72sdp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView14"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toEndOf="@+id/imageView14"
        app:layout_constraintTop_toTopOf="@+id/imageView14"
        app:srcCompat="@drawable/box" />

</androidx.constraintlayout.widget.ConstraintLayout>